{
  "name": "flight-booking-system-backend",
  "version": "0.0.1",
  "description": "The backend for Flight Booking System App",
  "author": "Aung Thiha",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "rimraf": "./node_modules/rimraf/bin.js",
    "nest": "./node_modules/@nestjs/cli/nest.js",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:cov": "jest --coverage",
    "test:watch-cov": "jest --watch --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch --detectOpenHandles",
    "typeorm": "pnpm run build && npx typeorm -d dist/db/data-source.js",
    "migration:generate": "pnpm run typeorm migration:generate",
    "migration:run": "pnpm run typeorm migration:run",
    "migration:revert": "pnpm run typeorm migration:revert"
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "dependencies": {
    "@nanogiants/nestjs-swagger-api-exception-decorator": "1.6.11",
    "@nestjs/bull": "10.2.0",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "10.4.1",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "10.4.1",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.1",
    "@nestjs/swagger": "7.4.0",
    "@nestjs/typeorm": "10.0.2",
    "@scalar/nestjs-api-reference": "^0.3.143",
    "@sendgrid/mail": "8.1.3",
    "@sentry/nestjs": "^8.26.0",
    "@sentry/profiling-node": "^8.26.0",
    "@sentry/webpack-plugin": "^2.22.2",
    "bcryptjs": "2.4.3",
    "bull": "4.16.0",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-yet": "^5.1.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "^16.4.5",
    "express": "4.19.2",
    "express-formidable": "1.2.0",
    "express-session": "1.18.0",
    "google-auth-library": "^9.13.0",
    "helmet": "^7.1.0",
    "nest-raven": "^10.1.0",
    "nestjs-pino": "^4.1.0",
    "nestjs-typeorm-paginate": "4.0.4",
    "passport": "0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "4.0.1",
    "pg": "8.12.0",
    "pino-http": "^10.2.0",
    "pino-loki": "^2.3.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "ts-mixer": "6.0.4",
    "typeorm": "0.3.20",
    "typeorm-encrypted": "^0.8.0"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@nestjs/cli": "10.4.4",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.4.1",
    "@types/bcryptjs": "2.4.6",
    "@types/bull": "3.15.9",
    "@types/cache-manager": "^4.0.6",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "22.4.1",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.1.0",
    "@typescript-eslint/parser": "8.1.0",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-tsdoc": "0.3.0",
    "jest": "29.7.0",
    "pre-commit": "1.2.2",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.4",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "src/db/",
      "src/heartbeat/",
      "src/shared/*",
      ".module.ts",
      "src/main.(t|j)s",
      ".dto.(t|j)s",
      ".entity.(t|j)s",
      "constants/*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "text-summary",
      "cobertura"
    ]
  }
}
